{
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(src/**)",
      "Edit(tests/**)",
      "Edit(prompts/**)",
      "Edit(docs/**)",
      "Edit(scripts/**)",
      "Edit(drizzle/**)",
      "Edit(AGENTS.md)",
      "Edit(package.json)",
      "Edit(tsconfig.json)",
      "Edit(biome.json)",
      "Edit(vitest.config.ts)",
      "Edit(.claude/commands/**)",
      "Edit(.claude/agents/**)",
      "Write(src/**)",
      "Write(tests/**)",
      "Write(prompts/**)",
      "Write(docs/**)",
      "Write(scripts/**)",
      "Write(drizzle/**)",
      "Bash(bun install*)",
      "Bash(bun test*)",
      "Bash(bun run typecheck)",
      "Bash(bun run lint*)",
      "Bash(bun run format*)",
      "Bash(bun run dev*)",
      "Bash(bun run start*)",
      "Bash(ls *)",
      "Bash(curl http://localhost*)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git checkout -b task/*)",
      "Bash(git checkout main*)",
      "Bash(git merge task/*)",
      "Bash(git branch -d task/*)",
      "Bash(git diff*)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(gh *)",
      "Bash(python3:*)"
    ],
    "deny": [
      "Bash(git push*)",
      "Bash(rm -rf*)",
      "Edit(.github/**)",
      "Edit(CLAUDE.md)",
      "Write(.claude/settings.json)",
      "Write(.claude/settings.local.json)",
      "Write(.github/**)",
      "Write(CLAUDE.md)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run typecheck 2>&1 || true",
            "timeout": 30,
            "statusMessage": "Running typecheck"
          }
        ]
      }
    ]
  }
}

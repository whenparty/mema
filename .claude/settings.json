{
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(src/**)",
      "Edit(tests/**)",
      "Edit(prompts/**)",
      "Edit(docs/**)",
      "Edit(scripts/**)",
      "Edit(drizzle/**)",
      "Edit(AGENTS.md)",
      "Write(src/**)",
      "Write(tests/**)",
      "Write(prompts/**)",
      "Write(docs/**)",
      "Write(scripts/**)",
      "Write(drizzle/**)",
      "Bash(bun test*)",
      "Bash(bun run typecheck)",
      "Bash(bun run lint*)",
      "Bash(bun run format*)",
      "Bash(bun run build)",
      "Bash(git diff*)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(gh *)",
      "Bash(python3:*)"
    ],
    "deny": [
      "Bash(git push*)",
      "Bash(rm -rf*)",
      "Edit(.github/**)",
      "Edit(CLAUDE.md)",
      "Write(.claude/settings.json)",
      "Write(.claude/settings.local.json)",
      "Write(.github/**)",
      "Write(CLAUDE.md)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run typecheck 2>&1 || true",
            "timeout": 30,
            "statusMessage": "Running typecheck"
          }
        ]
      }
    ]
  }
}
